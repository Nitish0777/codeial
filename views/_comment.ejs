<li id="comment-<%= comment._id %>">

    <p>
        <!-- deleting the comment   -->
        <% if(locals.user && locals.user.id == comment.user.id){ %>

            <small>
                <a class="delete-comment-btn" href="/comments/destroyComment/<%= comment.id %>">DELc</a>
            </small>

        <% } %>

        <%=comment.content%>
        <br>
        <small>
            <%=comment.user.name %>
        </small>

        <!-- CHANGE:display the link of this comment if the user is logged in -->
        <!-- then show the link to toggle likes else just show the count -->
        <!-- study about the data attributes -->
        <small>
            <% if(locals.user){ %>
                <!-- user is signIn -->
                <a class="toggle-like-button"  data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%= comment._id %>&type=Comment">
                    <%= comment.likes.length %> Likes
                </a>    
            <%}else{%>
                <!-- user is signOut -->
                <%= comment.likes.length %> Likes
            <% } %>
        </small>
    </p>
    

</li>